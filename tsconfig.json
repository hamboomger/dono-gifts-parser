{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2017"],
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "rootDir": "./",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2017",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "ts-node": {
    "files": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "gulpfile.ts"
  ],
  "exclude": []
}
